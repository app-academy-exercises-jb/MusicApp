<form action="<%= url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <input type="hidden" name="_method" value="<%= method %>">
  
  <p>
    <label for="title">Title:</label>
    <input type="text" name="album[title]" id="album_title">
  </p>

  <p>
    <label for="year">Year:</label>
    <input type="text" name="album[year]" id="album_year">
  </p>

  <p>
    <label for="studio">Type of album:</label>
    <br>
    <label for="studio">Studio</label>
    <input type="radio" name="album[studio]" id="studio" value="studio" checked>
    <label for="live">Live</label>
    <input type="radio" name="album[studio]" id="live" value="live">
  </p>

  <p>
    <label for="band_id">Select Band:</label>
    <select name="album[band_id]">
      <% Band.all.each do |band| %>
        <option value="<%=band.id%>"
        <%if band.id == @album.band_id%>selected<%end%>
        ><%=band.name%></option>
      <% end %>
    </select>
  </p>

  <input type="submit" value="Submit">
</form>